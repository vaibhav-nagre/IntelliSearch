# Environment Variables Template
# Copy this file to .env and update with your actual values

# ===== GOOGLE OAUTH =====
GOOGLE_CLIENT_ID=your_google_client_id_here
GOOGLE_CLIENT_SECRET=your_google_client_secret_here
GOOGLE_REDIRECT_URI=http://localhost:8000/auth/callback

# ===== DATABASE =====
DATABASE_URL=postgresql://postgres:password@localhost:5432/saviynt_search
REDIS_URL=redis://localhost:6379/0

# ===== SEARCH & AI =====
# OpenSearch/Elasticsearch for BM25 search
OPENSEARCH_URL=https://localhost:9200
OPENSEARCH_USERNAME=admin
OPENSEARCH_PASSWORD=admin

# Feature flags
USE_GROK_PRIVATE=false
USE_OPENSEARCH=true
ALLOW_DEBUG_PROMPTS=false

# LLM Configuration (when USE_GROK_PRIVATE=false)
LLM_MODEL_NAME=llama-3.1-70b-instruct
LLM_BASE_URL=http://localhost:8001/v1
EMBEDDING_MODEL_NAME=bge-large-en
EMBEDDING_BASE_URL=http://localhost:8002
RERANKER_MODEL_NAME=bge-reranker-large
RERANKER_BASE_URL=http://localhost:8003

# Grok Configuration (when USE_GROK_PRIVATE=true)
GROK_API_URL=https://your-private-grok-endpoint
GROK_API_KEY=your_private_grok_api_key

# ===== DATA SOURCES =====
# Forums (Discourse/custom)
FORUMS_URL=https://forums.saviynt.com
FORUMS_API_KEY=your_forums_api_key
FORUMS_USERNAME=service_account_username

# Documentation
DOCS_URL=https://docs.saviyntcloud.com
DOCS_API_KEY=your_docs_api_key

# Freshservice
FRESHSERVICE_DOMAIN=your_company.freshservice.com
FRESHSERVICE_API_KEY=your_freshservice_api_key

# ===== SECURITY =====
JWT_SECRET_KEY=your_jwt_secret_key_here_make_it_long_and_random
JWT_ALGORITHM=HS256
JWT_EXPIRE_MINUTES=60

# CORS settings
ALLOWED_ORIGINS=http://localhost:3000,https://your-github-pages-domain.github.io

# ===== GOOGLE CLOUD =====
GOOGLE_CLOUD_PROJECT=your-gcp-project-id
GOOGLE_APPLICATION_CREDENTIALS=path/to/service-account.json

# Cloud Storage (for storing crawled HTML snapshots)
GCS_BUCKET_NAME=saviynt-search-snapshots

# Pub/Sub (for crawl orchestration)
PUBSUB_CRAWL_TOPIC=crawl-requests
PUBSUB_SUBSCRIPTION=crawl-worker

# ===== DEVELOPMENT =====
DEBUG=true
LOG_LEVEL=INFO
ENVIRONMENT=development

# API Rate Limiting
RATE_LIMIT_PER_MINUTE=60
RATE_LIMIT_BURST=10

# Search Configuration
MAX_SEARCH_RESULTS=50
DEFAULT_SEARCH_RESULTS=10
MAX_CHAT_HISTORY=20

# ===== MONITORING =====
# OpenTelemetry
OTEL_EXPORTER_OTLP_ENDPOINT=http://localhost:4317
OTEL_SERVICE_NAME=saviynt-search-backend

# Prometheus metrics
PROMETHEUS_MULTIPROC_DIR=/tmp/prometheus_multiproc

# ===== FRONTEND BUILD =====
NEXT_PUBLIC_API_BASE_URL=http://localhost:8000
NEXT_PUBLIC_GOOGLE_CLIENT_ID=your_google_client_id_here
