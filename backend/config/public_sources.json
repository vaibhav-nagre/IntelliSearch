    }
  },
  "search_config": {
    "default_sources": [
      "saviynt_docs"
    ],
    "max_results_per_source": 10,
    "boost_factors": {
      "title_match": 2.0,
      "exact_phrase": 1.5,
      "recent_content": 1.2
    }
  }
