    {
      "name": "GitHub Docs",
      "base_url": "https://docs.github.com",
      "description": "Official GitHub documentation for developers and repository management",
      "search_enabled": true,
      "ingestion_config": {
        "crawl_enabled": true,
        "crawl_depth": 3,
        "crawl_frequency": "weekly",
        "include_patterns": [
          "/en/*",
          "/rest/*",
          "/graphql/*",
          "/actions/*",
          "/repositories/*"
        ],
        "exclude_patterns": [
          "/enterprise-server/*",
          "/early-access/*",
          "*/admin/*"
        ],
        "max_pages": 1000
      },
      "display_config": {
        "icon": "\ud83d\udc19",
        "category": "documentation",
        "color": "#24292e",
        "priority": 8
      },
      "id": "github_docs"
    },
    {
      "id": "docker_documentation",
      "name": "Docker Documentation",
      "description": "Official Docker documentation and guides",
      "base_url": "https://docs.docker.com",
      "search_enabled": true,
      "ingestion_config": {
        "crawl_enabled": true,
        "crawl_depth": 2,
        "crawl_frequency": "weekly",
        "include_patterns": [
          "/docs/*",
          "/documentation/*",
          "/guides/*"
        ],
        "exclude_patterns": [
          "/admin/*",
          "/private/*",
          "*/draft/*"
        ],
        "max_pages": 500
      },
      "display_config": {
        "icon": "\ud83d\udc33",
        "category": "tools",
        "color": "#2496ed",
        "priority": 5
      }
    }
