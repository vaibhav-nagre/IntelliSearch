# Environment Configuration
NODE_ENV=development
PORT=8000

# AWS Configuration
AWS_REGION=us-east-1
AWS_ACCESS_KEY_ID=your_access_key_here
AWS_SECRET_ACCESS_KEY=your_secret_key_here

# AWS Bedrock Model Configuration
AWS_BEDROCK_MODEL_ID=anthropic.claude-3-sonnet-20240229-v1:0
AWS_BEDROCK_EMBEDDING_MODEL_ID=amazon.titan-embed-text-v1

# Database Configuration
DATABASE_URL=postgresql+asyncpg://user:password@localhost:5432/saviynt_search
REDIS_URL=redis://localhost:6379/0

# Search Configuration
OPENSEARCH_URL=https://localhost:9200
OPENSEARCH_USERNAME=admin
OPENSEARCH_PASSWORD=admin

# Authentication
SECRET_KEY=your_secret_key_here_at_least_32_characters_long
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30

# Google OAuth (for SSO)
GOOGLE_CLIENT_ID=your_google_client_id
GOOGLE_CLIENT_SECRET=your_google_client_secret
GOOGLE_REDIRECT_URI=http://localhost:8000/auth/callback

# Data Sources
SAVIYNT_FORUMS_URL=https://forums.saviynt.com
SAVIYNT_DOCS_URL=https://docs.saviyntcloud.com
FRESHSERVICE_API_KEY=your_freshservice_api_key
FRESHSERVICE_DOMAIN=your_domain.freshservice.com

# CORS Configuration
ALLOWED_ORIGINS=http://localhost:3000,https://your-github-pages-domain.github.io

# Logging
LOG_LEVEL=INFO

# Feature Flags
USE_AWS_BEDROCK=true
USE_OPENSEARCH=true
ALLOW_DEBUG_PROMPTS=false

# Performance
MAX_WORKERS=4
CHUNK_SIZE=1000
CHUNK_OVERLAP=150
MAX_CHUNKS_PER_QUERY=20
